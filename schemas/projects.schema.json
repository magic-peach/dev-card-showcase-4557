{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "type": "object",
  "required": ["title", "description", "author", "tags", "language", "date"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Project title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "author": {
      "type": "string",
      "description": "Project author name"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Project tags for categorization"
    },
    "language": {
      "type": "string",
      "description": "Primary programming language"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Creation date (YYYY-MM-DD)"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Project URL"
    },
    "image": {
      "type": "string",
      "format": "uri",
      "description": "Project thumbnail image URL"
    }
  }
}
