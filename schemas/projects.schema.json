{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "title",
      "description",
      "tags",
      "links",
      "author"
    ],
    "properties": {
      "title": {
        "type": "string",
        "description": "Project title",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "description": "Detailed project description",
        "minLength": 1
      },
      "tags": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        },
        "description": "List of project tags/technologies"
      },
      "links": {
        "type": "object",
        "properties": {
          "live": {
            "type": "string",
            "description": "URL to live demo (relative path recommended)"
          },
          "github": {
            "type": "string",
            "format": "uri",
            "description": "URL to GitHub repository"
          },
          "demo": {
            "type": "string",
            "description": "Alternative demo URL"
          }
        },
        "description": "Project links (live demo, GitHub, etc.)"
      },
      "author": {
        "type": "object",
        "required": [
          "name",
          "github"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Author's name or GitHub username"
          },
          "github": {
            "type": "string",
            "format": "uri",
            "description": "GitHub profile URL"
          }
        },
        "description": "Author information"
      }
    }
  }
}
