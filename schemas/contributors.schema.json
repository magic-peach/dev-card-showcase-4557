{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contributor",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-zA-Z0-9-]+$": {
      "type": "object",
      "required": [
        "login",
        "name",
        "avatar_url",
        "html_url",
        "followers",
        "following",
        "public_repos",
        "public_gists",
        "created_at",
        "updated_at",
        "last_synced",
        "total_repos",
        "total_stars",
        "total_forks",
        "projects"
      ],
      "properties": {
        "login": {
          "type": "string",
          "description": "GitHub username (login)"
        },
        "name": {
          "type": "string",
          "description": "Full name or display name"
        },
        "bio": {
          "type": ["string", "null"],
          "description": "Short bio or description"
        },
        "avatar_url": {
          "type": "string",
          "format": "uri",
          "description": "URL to avatar image"
        },
        "html_url": {
          "type": "string",
          "format": "uri",
          "description": "URL to GitHub profile"
        },
        "followers": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of GitHub followers"
        },
        "following": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of GitHub accounts following"
        },
        "public_repos": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of public GitHub repositories"
        },
        "public_gists": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of public gists"
        },
        "company": {
          "type": ["string", "null"],
          "description": "Company or organization name"
        },
        "location": {
          "type": ["string", "null"],
          "description": "User's location"
        },
        "blog": {
          "type": "string",
          "description": "URL to personal blog or website"
        },
        "twitter_username": {
          "type": ["string", "null"],
          "description": "Twitter handle (without @)"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Account creation timestamp (ISO 8601 format)"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Last profile update timestamp (ISO 8601 format)"
        },
        "last_synced": {
          "type": "string",
          "description": "Last data sync timestamp"
        },
        "total_repos": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of repositories"
        },
        "total_stars": {
          "type": "integer",
          "minimum": 0,
          "description": "Total stars across all repositories"
        },
        "total_forks": {
          "type": "integer",
          "minimum": 0,
          "description": "Total forks across all repositories"
        },
        "projects": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of project titles contributed to"
        }
      }
    }
  }
}
