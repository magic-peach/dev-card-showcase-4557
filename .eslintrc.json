{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-empty-function": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "multi-line"]
  },
  "globals": {
    "filterCards": "readonly",
    "filterByRole": "readonly",
    "sortCards": "readonly",
    "lucide": "readonly"
  }
}
