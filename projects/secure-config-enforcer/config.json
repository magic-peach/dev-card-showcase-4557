{
  "enforcer": {
    "name": "Secure Configuration Baseline Enforcer",
    "version": "1.0.0",
    "description": "Configuration baseline enforcement and compliance monitoring",
    "refreshInterval": 5000,
    "maxAuditLogs": 100
  },
  "baselines": {
    "production": {
      "label": "Production",
      "description": "Strict security and operational requirements",
      "riskLevel": "low"
    },
    "staging": {
      "label": "Staging",
      "description": "Balanced security and testing flexibility",
      "riskLevel": "medium"
    },
    "development": {
      "label": "Development",
      "description": "Developer-friendly with testing features",
      "riskLevel": "high"
    }
  },
  "severityLevels": {
    "critical": {
      "order": 1,
      "color": "danger",
      "weight": 100
    },
    "high": {
      "order": 2,
      "color": "warning",
      "weight": 50
    },
    "medium": {
      "order": 3,
      "color": "secondary",
      "weight": 25
    },
    "low": {
      "order": 4,
      "color": "primary",
      "weight": 10
    }
  },
  "policies": [
    {
      "id": "encryption",
      "name": "Encryption Policy",
      "category": "security",
      "rules": ["encryption.enabled", "tls.version", "database.ssl"]
    },
    {
      "id": "authentication",
      "name": "Authentication Policy",
      "category": "security",
      "rules": ["auth.mfa", "tls.version"]
    },
    {
      "id": "logging",
      "name": "Logging & Audit Policy",
      "category": "compliance",
      "rules": ["logging.enabled", "audit.enabled"]
    },
    {
      "id": "security",
      "name": "Security Hardening Policy",
      "category": "security",
      "rules": ["debug.mode", "cors.enabled", "api.rateLimit"]
    }
  ],
  "commonRules": {
    "encryption.enabled": {
      "type": "boolean",
      "description": "Enable encryption"
    },
    "tls.version": {
      "type": "string",
      "description": "TLS version requirement",
      "allowed": ["1.2", "1.3"]
    },
    "auth.mfa": {
      "type": "boolean",
      "description": "Multi-factor authentication"
    },
    "logging.enabled": {
      "type": "boolean",
      "description": "Application logging"
    },
    "audit.enabled": {
      "type": "boolean",
      "description": "Audit trail logging"
    },
    "debug.mode": {
      "type": "boolean",
      "description": "Debug mode"
    },
    "database.ssl": {
      "type": "boolean",
      "description": "Database SSL/TLS"
    },
    "api.rateLimit": {
      "type": "number",
      "description": "API rate limit (req/hour)"
    },
    "cors.enabled": {
      "type": "boolean",
      "description": "CORS enabled"
    },
    "timeout.request": {
      "type": "number",
      "description": "Request timeout (seconds)"
    }
  },
  "violationTypes": [
    "missing",
    "mismatch",
    "deprecated",
    "unauthorized"
  ],
  "remediationStrategies": [
    "auto-fix",
    "manual-review",
    "escalation",
    "scheduled-update"
  ],
  "dashboard": {
    "refreshInterval": 5000,
    "alertThreshold": 70,
    "criticalThreshold": 50
  }
}
