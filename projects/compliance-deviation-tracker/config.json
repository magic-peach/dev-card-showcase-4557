{
  "tracker": {
    "name": "Autonomous Compliance Deviation Tracker",
    "version": "1.0.0",
    "description": "Continuous monitoring of operational workflows against regulatory standards",
    "scanInterval": 30000,
    "maxAuditLogSize": 100,
    "maxHistorySize": 24
  },
  "frameworks": [
    {
      "id": "gdpr",
      "name": "GDPR",
      "fullName": "General Data Protection Regulation",
      "description": "EU data protection and privacy regulation",
      "enabled": true,
      "rules": [
        {
          "id": "gdpr-1",
          "name": "Data Encryption at Rest",
          "description": "All personal data must be encrypted when stored",
          "severity": "critical",
          "category": "security"
        },
        {
          "id": "gdpr-2",
          "name": "Data Encryption in Transit",
          "description": "All personal data must be encrypted during transmission",
          "severity": "critical",
          "category": "security"
        },
        {
          "id": "gdpr-3",
          "name": "Data Access Controls",
          "description": "Implement role-based access controls for personal data",
          "severity": "high",
          "category": "security"
        },
        {
          "id": "gdpr-4",
          "name": "Right to Erasure",
          "description": "Users must be able to request data deletion",
          "severity": "high",
          "category": "privacy"
        },
        {
          "id": "gdpr-5",
          "name": "Consent Management",
          "description": "Obtain and track explicit user consent",
          "severity": "medium",
          "category": "privacy"
        },
        {
          "id": "gdpr-6",
          "name": "Data Portability",
          "description": "Users must be able to export their data",
          "severity": "medium",
          "category": "privacy"
        },
        {
          "id": "gdpr-7",
          "name": "Privacy by Design",
          "description": "Integrate privacy into system architecture",
          "severity": "high",
          "category": "design"
        },
        {
          "id": "gdpr-8",
          "name": "Data Breach Notification",
          "description": "Report breaches within 72 hours",
          "severity": "critical",
          "category": "incident"
        }
      ]
    },
    {
      "id": "hipaa",
      "name": "HIPAA",
      "fullName": "Health Insurance Portability and Accountability Act",
      "description": "Healthcare data privacy and security standards",
      "enabled": true,
      "rules": [
        {
          "id": "hipaa-1",
          "name": "PHI Encryption",
          "description": "Protected Health Information must be encrypted",
          "severity": "critical",
          "category": "security"
        },
        {
          "id": "hipaa-2",
          "name": "Access Audit Logs",
          "description": "Maintain comprehensive access logs for PHI",
          "severity": "critical",
          "category": "auditing"
        },
        {
          "id": "hipaa-3",
          "name": "Minimum Necessary Rule",
          "description": "Limit PHI access to minimum necessary",
          "severity": "high",
          "category": "access"
        },
        {
          "id": "hipaa-4",
          "name": "Business Associate Agreements",
          "description": "BAA required for third-party PHI access",
          "severity": "high",
          "category": "legal"
        },
        {
          "id": "hipaa-5",
          "name": "Breach Notification Rule",
          "description": "Notify affected individuals within 60 days",
          "severity": "critical",
          "category": "incident"
        },
        {
          "id": "hipaa-6",
          "name": "Patient Rights",
          "description": "Provide access to medical records",
          "severity": "medium",
          "category": "privacy"
        }
      ]
    },
    {
      "id": "sox",
      "name": "SOX",
      "fullName": "Sarbanes-Oxley Act",
      "description": "Financial reporting and auditing standards",
      "enabled": true,
      "rules": [
        {
          "id": "sox-1",
          "name": "Financial Data Integrity",
          "description": "Ensure accuracy of financial data",
          "severity": "critical",
          "category": "financial"
        },
        {
          "id": "sox-2",
          "name": "Access Controls",
          "description": "Restrict access to financial systems",
          "severity": "critical",
          "category": "security"
        },
        {
          "id": "sox-3",
          "name": "Audit Trail",
          "description": "Maintain complete audit logs",
          "severity": "high",
          "category": "auditing"
        },
        {
          "id": "sox-4",
          "name": "Change Management",
          "description": "Document all system changes",
          "severity": "high",
          "category": "operations"
        },
        {
          "id": "sox-5",
          "name": "Segregation of Duties",
          "description": "Separate critical financial functions",
          "severity": "medium",
          "category": "process"
        }
      ]
    },
    {
      "id": "pci-dss",
      "name": "PCI-DSS",
      "fullName": "Payment Card Industry Data Security Standard",
      "description": "Credit card data protection standards",
      "enabled": true,
      "rules": [
        {
          "id": "pci-1",
          "name": "Cardholder Data Encryption",
          "description": "Encrypt cardholder data at rest and in transit",
          "severity": "critical",
          "category": "security"
        },
        {
          "id": "pci-2",
          "name": "Network Segmentation",
          "description": "Isolate cardholder data environment",
          "severity": "critical",
          "category": "network"
        },
        {
          "id": "pci-3",
          "name": "Vulnerability Management",
          "description": "Regular vulnerability scanning and patching",
          "severity": "high",
          "category": "security"
        },
        {
          "id": "pci-4",
          "name": "Access Controls",
          "description": "Restrict access to cardholder data",
          "severity": "high",
          "category": "access"
        },
        {
          "id": "pci-5",
          "name": "Security Testing",
          "description": "Regular penetration testing",
          "severity": "medium",
          "category": "testing"
        },
        {
          "id": "pci-6",
          "name": "Information Security Policy",
          "description": "Maintain security policy documentation",
          "severity": "medium",
          "category": "documentation"
        }
      ]
    }
  ],
  "workflows": [
    {
      "id": "user-authentication",
      "name": "User Authentication",
      "category": "Security",
      "frameworks": ["gdpr", "hipaa"],
      "description": "User login and authentication workflows"
    },
    {
      "id": "data-storage",
      "name": "Data Storage",
      "category": "Data Management",
      "frameworks": ["gdpr", "hipaa", "pci-dss"],
      "description": "Data persistence and storage operations"
    },
    {
      "id": "payment-processing",
      "name": "Payment Processing",
      "category": "Financial",
      "frameworks": ["pci-dss", "sox"],
      "description": "Payment transaction handling"
    },
    {
      "id": "financial-reporting",
      "name": "Financial Reporting",
      "category": "Financial",
      "frameworks": ["sox"],
      "description": "Financial data reporting workflows"
    },
    {
      "id": "user-data-export",
      "name": "User Data Export",
      "category": "Data Management",
      "frameworks": ["gdpr"],
      "description": "User data portability features"
    },
    {
      "id": "audit-logging",
      "name": "Audit Logging",
      "category": "Monitoring",
      "frameworks": ["gdpr", "hipaa", "sox"],
      "description": "System audit and activity logging"
    }
  ],
  "severityLevels": [
    {
      "level": "critical",
      "weight": 25,
      "color": "#dc2626",
      "description": "Immediate action required",
      "recommendation": "Implement compensating controls and escalate to compliance team"
    },
    {
      "level": "high",
      "weight": 15,
      "color": "#f97316",
      "description": "Address within 48 hours",
      "recommendation": "Review and update security policies"
    },
    {
      "level": "medium",
      "weight": 10,
      "color": "#eab308",
      "description": "Schedule remediation",
      "recommendation": "Add to next sprint cycle"
    },
    {
      "level": "low",
      "weight": 5,
      "color": "#3b82f6",
      "description": "Future improvement",
      "recommendation": "Add to backlog"
    }
  ],
  "deviationProbability": 0.15,
  "complianceThreshold": 90,
  "dashboard": {
    "refreshInterval": 1000,
    "enableCharts": true,
    "enableRealTimeMetrics": true,
    "chartUpdateInterval": 5000
  }
}
